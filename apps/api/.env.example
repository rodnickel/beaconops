# ============================================
# Variáveis de Ambiente - API
# Copie este arquivo para .env e preencha os valores
# ============================================

# Banco de Dados PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/observabilidade"

# Redis (para cache e filas de jobs)
REDIS_URL="redis://localhost:6379"

# JWT (Autenticação)
# IMPORTANTE: Use uma string aleatória de pelo menos 32 caracteres
JWT_SECRET="sua-chave-secreta-muito-segura-com-pelo-menos-32-caracteres"
JWT_EXPIRES_IN="7d"

# Email (Resend)
# Obtenha sua API key em https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="alerts@seudominio.com"

# Configurações da Aplicação
NODE_ENV="development"
API_PORT=3333
WEB_URL="http://localhost:3000"
API_URL="http://localhost:3333"
